<p id="notice"><%= notice %></p>

<h1>Distritos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Región</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.id %></td>
        <td><%= link_to 'Ver', district %></td>
        <td><%= link_to 'Editar', edit_district_path(district) %></td>
        <td><%= link_to 'Eliminar', district, method: :delete, data: { confirm: 'Estás segyro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Distrito', new_district_path %>
